<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dj.test.dispFrag">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#f5f3c9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
            android:weightSum="1">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
             <Button
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginLeft="65dp"
                 android:layout_marginTop="2dp"
                 android:id="@+id/connectButton"
                 android:background="@drawable/redcircle"
                 android:layout_above="@+id/gridLayout"
                 android:layout_toStartOf="@+id/editText" />
             <EditText
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/editText"
                 android:text="192.168.137.208"
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="10dp"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:textStyle="bold"
                 android:textIsSelectable="false"
                 android:textColor="#030000" />
         </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:layout_alignParentStart="true"
            android:id="@+id/gridLayout"
            android:layout_below="@+id/button">

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="Number of People"
                android:id="@+id/occTV"
                android:layout_row="0"
                android:layout_column="0"
                android:typeface="serif"
                android:textColor="#010000"
                android:gravity="center"
                android:background="#fa7961" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:id="@+id/occVal"
                android:layout_row="0"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="Temperature"
                android:id="@+id/tempTV"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#010000"
                android:background="#8695b1"
                android:gravity="center" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:text=""
                android:id="@+id/tempVal"
                android:layout_row="1"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="Humidity"
                android:id="@+id/humTV"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="#010000"
                android:gravity="center"
                android:background="#25c4c4" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:id="@+id/humVal"
                android:layout_row="2"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="Luminosity"
                android:id="@+id/luminTV"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="#010000"
                android:gravity="center"
                android:background="#fcf374" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:id="@+id/luminVal"
                android:layout_row="3"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="CO"
                android:id="@+id/COTV"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="#010000"
                android:gravity="center"
                android:background="#79ab88" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:id="@+id/COVal"
                android:layout_row="4"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="CO2"
                android:id="@+id/codTV"
                android:layout_row="5"
                android:layout_column="0"
                android:textColor="#010000"
                android:gravity="center"
                android:background="#f39c4c" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:text=""
                android:id="@+id/codVal"
                android:layout_row="5"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="Oxidising Gas"
                android:id="@+id/oxTV"
                android:layout_row="6"
                android:layout_column="0"
                android:textColor="#010000"
                android:gravity="center"
                android:background="#d095a1" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:text=""
                android:id="@+id/oxVal"
                android:layout_row="6"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:text="Reducing Gas"
                android:id="@+id/redTV"
                android:layout_row="7"
                android:layout_column="0"
                android:textColor="#010000"
                android:gravity="center"
                android:background="#6DC066" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:id="@+id/redVal"
                android:layout_row="7"
                android:layout_column="4"
                android:textColor="#010000"
                android:gravity="center"/>

        </GridLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
